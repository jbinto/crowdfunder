%table.table.table-striped.table-hover
  %tbody
    %th Project
    %th Description
    %th Goal
    %th Actions
    -projects.each do |project|
      %tr.project
        %td= project.title
        %td= project.teaser
        %td= "$#{project.goal}"
        %td 
          - if project.user == current_user
            = link_to 'Edit this project', [:edit, :my, project], :class => 'btn btn-small'

= paginate projects