.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand{:href => '#'} CrowdFunder
      .nav-collapse.collapse
        %ul.nav
          %li{:class => ('active' if @nav == 'home') }
            = link_to 'Home', :root
          %li{:class => ('active' if @nav == 'projects') }
            = link_to 'Projects', :projects
          - if logged_in?
            %li{:class => ('active' if @nav == 'my/projects') }
              = link_to 'My Projects', [:my, :projects]
      .pull-right
        - if logged_in?
          = link_to 'Log out', session_path, :method => :delete, class: 'btn btn-danger'
        - else
          = link_to 'Sign up', new_user_path, class: 'btn btn-primary'
          = link_to 'Sign in', sign_in_path, class: 'btn btn-success'
