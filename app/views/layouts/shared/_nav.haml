.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand{:href => '#'} CrowdFunder
      .nav-collapse.collapse
        %ul.nav
          %li{:class => ('active' if controller_name == 'home') }
            = link_to 'Home', :root
          %li{:class => ('active' if controller_name == 'projects') }
            = link_to 'Projects', :projects
      .pull-right
        - if logged_in?
          = link_to 'Log out', session_path, :method => :delete, class: 'btn btn-danger'
        - else
          = link_to 'Sign up', new_user_path, class: 'btn btn-primary'
          = link_to 'Sign in', new_session_path, class: 'btn btn-success'
